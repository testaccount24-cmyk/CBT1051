.*-------+---------+---------+---------+---------+---------+---------+*
         MACRO
&ZID     $XC   &TARGET,&SOURCE,&KEY=DSAEKEY,&WRKREG=15
.*
         LCLC  &XOR
&XOR     SETC  'XOI'.'&SYSNDX'
.*
         ICM   &WRKREG,15,&KEY+3       .key zero?
         BZ    &XOR                    .yes
         SPKA  0(0)                    .supervisor key
&XOR     DS    0H
         XC    &TARGET,&SOURCE         .update target
         ICM   &WRKREG,15,&KEY+3       .key zero?
         BZ    &XOR.A
         SPKA  0(&WRKREG)              .restore my key
&XOR.A   DS    0H
         MEND
