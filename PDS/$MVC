.*-------+---------+---------+---------+---------+---------+---------+*
         MACRO
&ZID     $MVC  &TARGET,&SOURCE,&KEY=DSAEKEY,&WRKREG=15
.*
         LCLC  &XVC
&XVC     SETC  'XOI'.'&SYSNDX'
.*
         ICM   &WRKREG,B'0001',&KEY+3  .key zero?
         BZ    &XVC                    .yes
         SPKA  0(0)                    .supervisor key
&XVC     DS    0H
         MVC   &TARGET,&SOURCE         .update target
         ICM   &WRKREG,B'0001',&KEY+3  .key zero?
         BZ    &XVC.A
         SPKA  0(&WRKREG)              .restore my key
&XVC.A   DS    0H
         MEND
